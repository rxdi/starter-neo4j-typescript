{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "src",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ],
    "files": [
        "./src/main.ts"
    ]
}